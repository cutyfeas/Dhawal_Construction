@{
}
<header class="header header-sticky mb-4">
    <div class="container-fluid">
        <button class="header-toggler px-md-0 me-md-3 d-md-none" type="button"
                onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
            <svg class="icon icon-lg">
                <use xlink:href="~/proj/vendors/@@coreui/icons/svg/free.svg#cil-menu"></use>
            </svg>
        </button>
        <a class="header-brand d-md-none" href="#">

        </a>
        <form class="d-flex" role="search">
            <div class="input-group">
                <span class="input-group-text bg-light border-0 px-1" id="search-addon">
                    <svg class="icon icon-lg my-1 mx-2 text-disabled">
                        <use xlink:href="~/proj/vendors/@@coreui/icons/svg/free.svg#cil-search"></use>
                    </svg>
                </span>
                <input class="form-control bg-light border-0" type="text" placeholder="Search..."
                       aria-label="Search" aria-describedby="search-addon">
            </div>
        </form>
        <ul class="header-nav ms-auto me-3">
        </ul>
        <ul class="header-nav me-4">
            <li class="nav-item dropdown d-flex align-items-center">
                <a class="nav-link py-0"
                   data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                   aria-expanded="false">
                    <div class="avatar avatar-md">
                        <img class="avatar-img" src="~/proj/assets/img/avatars/8.jpg" alt="user@email.com">
                        <span class="avatar-status bg-success"></span>
                    </div>
                </a>
                <div class="dropdown-menu dropdown-menu-end pt-0">
                    <div class="dropdown-header bg-light py-2 dark:bg-white dark:bg-opacity-10">
                        <div class="fw-semibold">Account</div>
                    </div>
                    <a class="dropdown-item" href="#">
                        <svg class="icon me-2">
                            <use xlink:href="~/proj/vendors/@@coreui/icons/svg/free.svg#cil-bell"></use>
                        </svg> Updates<span class="badge badge-sm bg-info-gradient ms-2">42</span>
                    </a>
                    <a class="dropdown-item" href="#">
                        <svg class="icon me-2">
                            <use xlink:href="~/proj/vendors/@@coreui/icons/svg/free.svg#cil-envelope-open"></use>
                        </svg> Messages<span class="badge badge-sm badge-sm bg-success ms-2">42</span>
                    </a>

                    <div class="dropdown-header bg-light py-2 dark:bg-white dark:bg-opacity-10">
                        <div class="fw-semibold">Settings</div>
                    </div>
                    <a class="dropdown-item" href="#">
                        <svg class="icon me-2">
                            <use xlink:href="~/proj/vendors/@@coreui/icons/svg/free.svg#cil-user"></use>
                        </svg>
                        Profile
                    </a>
                    <a class="dropdown-item" href="#">
                        <svg class="icon me-2">
                            <use xlink:href="~/proj/vendors/@@coreui/icons/svg/free.svg#cil-settings"></use>
                        </svg>
                        Settings
                    </a>

                    <div class="dropdown-divider"></div><a class="dropdown-item" href="#">
                        <svg class="icon me-2">
                            <use xlink:href="~/proj/vendors/@@coreui/icons/sprites/free.svg#cil-lock-locked"></use>
                        </svg> Account Info
                    </a><a class="dropdown-item" href="#">
                        <svg class="icon me-2">
                            <use xlink:href="~/proj/vendors/@@coreui/icons/svg/free.svg#cil-account-logout"></use>
                        </svg> Logout
                    </a>
                </div>
            </li>
        </ul>
        <button class="header-toggler px-md-0 me-md-3" type="button"
                onclick="coreui.Sidebar.getInstance(document.querySelector('#aside')).show()">
            <svg class="icon icon-lg">
                <use xlink:href="~/proj/vendors/@@coreui/icons/svg/free.svg#cil-applications-settings"></use>
            </svg>
        </button>
    </div>
</header>