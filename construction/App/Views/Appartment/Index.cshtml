@model App.Models.appartmentmodel
@{
    Layout = "~/Views/_adminlayout.cshtml";
    var breadcrumb = Model.tabid == 1 ? "Condominium" : "Appartment";
}


<div class="wrapper d-flex flex-column min-vh-100 bg-light bg-opacity-50 dark:bg-transparent">
    <partial name="/Views/_adminheader.cshtml">

        <div class="body flex-grow-1 px-3">
            <div class="container-lg">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item">
                            <span>Home</span>
                        </li>
                        <li class="breadcrumb-item active"><span>@breadcrumb</span></li>
                    </ol>
                </nav>

                <div class="row user-details">
                    <div class="col-lg-12">
                        <!-- Tabs with icons on Card -->
                        <div class="card card-nav-tabs">
                            <div class="card-header card-header-primary">
                                <!-- colors: "header-primary", "header-info", "header-success", "header-warning", "header-danger" -->
                                <div class="nav-tabs-navigation">
                                    <div class="nav-tabs-wrapper">
                                        <ul class="nav nav-tabs" data-tabs="tabs">
                                            <li class="nav-item">
                                                @if (Model.tabid == 1)
                                                {
                                                    <a class="nav-link active" data-coreui-target="#condominium"
                                                   href="/appartment/viewondominium">
                                                        Condominium
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="nav-link" data-coreui-target="#condominium"
                                                   href="/appartment/viewondominium">
                                                        Condominium
                                                    </a>
                                                }
                                            </li>
                                            <li class="nav-item">
                                                @if (Model.tabid == 2)
                                                {
                                                    <a class="nav-link active" data-coreui-target="#apartments"
                                                   href="/appartment/viewappartment">
                                                        Apartments
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="nav-link" data-coreui-target="#apartments"
                                                   href="/appartment/viewappartment">
                                                        Apartments
                                                    </a>
                                                }
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body ">
                                <div class="tab-content">

                                    <partial name="_condominium" for="@Model">
                                        <partial name="_appartment" for="@Model">
                                </div>
                            </div>
                        </div>
                        <!-- End Tabs with icons on Card -->
                    </div>
                </div>
            </div>
        </div>
        <partial name="/Views/_adminfooter.cshtml">

</div>
