@model App.Models.appartmentmodel

@{
    var isactive = Model.tabid == 2 ? "active" : "inactive";
}
<div class="tab-pane @isactive" id="apartments">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form asp-controller="appartment" asp-action="addappartment" id="apartments-data" method="post" class="form">
                    <input type="hidden" asp-for="tabid">
                    <input type="hidden" asp-for="apartment.id">
                    <div class="row">

                        <div class="col-md-6 mb-3">
                            <label for="condominium-id" class="form-label fw-semibold">
                                CONDOMINIUM:
                            </label>
                            <select required class="form-control" id="roleId" asp-for="apartment.condominiumid" asp-items="@(new SelectList(Model.condominiumlist,"id","condominium_name"))">
                                <option value="" selected>--- SELECT ---</option>
                            </select>

                        </div>

                         <div class="col-md-6 mb-3">
                            <label for="fixtures"
                                   class="form-label fw-semibold">FIXTURES :</label>
                            <input asp-for="apartment.fixtures" required type=" text" class="form-control" id="fixtures">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="code" class="form-label fw-semibold">
                                CODE
                                :
                            </label>
                            <input asp-for="apartment.code" required type="text" class="form-control" id="code">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="area" class="form-label fw-semibold">
                                AREA
                                :
                            </label>
                            <input asp-for="apartment.area" required type="text" class="form-control" id="area">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="staircase"
                                   class="form-label fw-semibold">STAIRCASE :</label>
                            <input asp-for="apartment.staircase" required type="text" class="form-control"
                                   id="staircase">

                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="floorplan"
                                   class="form-label fw-semibold">FLOORPLAN</label>
                            <input asp-for="apartment.floorplan"  type="file" class="form-control" id="floorplan">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="area" class="form-label fw-semibold">
                                AREA
                                :
                            </label>
                            <input asp-for="apartment.area" required type="text" class="form-control" id="area">
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="area" class="form-label fw-semibold">
                                BUILDING
                                :
                            </label>
                            <input asp-for="apartment.building" required type="text" class="form-control" id="building">
                        </div>
                       
                    </div>

                    <button type="submit" class="btn btn-info rounded-pill w-25 mt-3 mb-3 fw-semibold text-light text-center ms-auto text-uppercase justify-content-end ">Submit</button>
                </form>





                <table id="apartment-lists" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>CONDOMINIUM</th>
                            <th>CODE</th>
                            <th>BUILDING</th>
                            <th>STAIRCASE</th>
                            <th>AREA</th>
                            <th>FIXTURES</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.apartmentlist != null)
                        {
                            @foreach (var x in Model.apartmentlist)
                            {
                                <tr>
                                    <td>@x.id</td>
                                    <td>@x.condominium.condominium_name</td>
                                    <td>@x.code</td>
                                    <td>@x.building</td>
                                    <td>@x.staircase</td>
                                    <td>@x.area</td>
                                    <td>@x.fixtures</td>
                                    <td>
                                        <a class="btn btn-success me-2" href="\appartment\editappartment\@x.id">
                                            <i class="cil-pencil icon icon-sm"></i>
                                        </a>
                                        <a class="btn btn-info me-2" href="\appartment\deleteappartment\@x.id">
                                            <i class="cil-trash icon icon-sm"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>